#contact
	.banner-first
		background url("/imgs/banner-01.png") no-repeat center
		background-size cover
		.text-banner-first
			margin-left 28.6%
			@media only screen and (max-width: 768px)
				width 100px
			@media only screen and (max-width: 320px)
				width 60px
				margin-left 15%
			width 200px
			span
				text-align center
				font-size 60px
				font-family "YuMincho"
				display block
				line-height 1
				background-color rgba(255, 234, 0, 0.6)
				padding 10% 0
				color #000000
				@media only screen and (max-width: 768px)
					padding 11% 0
					font-size 6.0vw
				@media only screen and (max-width: 320px)
					padding 40% 0
	.contact-info
		padding 0
		margin-top 8px
		margin-bottom 100px
		@media screen and (max-width 768px)
			padding 0 10px
		.title-none
			text-align center
			line-height 1.7
			position relative
			z-index 0
		.contact-nav
			margin-top 32px
			ul
				li
					padding 0 0 0 0
					border-right 1px solid white
					border-bottom 1px solid white
					background-color #333
					a
						display block
						padding 10px
						text-align center
						line-height 1.7
						color white !important
						background url("../../imgs/contact-icn-arrow-down.png") no-repeat 95% center
						&:hover
							text-decoration underline !important
						@media screen and (max-width: 991px)
							font-size 0.7em
							background-size 12px
		.contact-field
			margin-top 53px			
			.sub-title
				padding-bottom 5px
				border-bottom 1px solid black
				text-align center
				position relative
				z-index 0
				span
					font-weight bold
					line-height 1.7
				&:before
					content ""
					position absolute
					bottom -9px
					left 50%
					margin-left -9px
					width 0
					height 0
					border-style solid
					border-width 9px 9px 0 9px
					border-color #fff transparent transparent transparent
					z-index 0
				&:after
					content ""
					position absolute
					bottom -10px
					left 50%
					margin-left -10px
					width 0
					height 0
					border-style solid
					border-width 10px 10px 0 10px
					border-color #000 transparent transparent transparent
					z-index -1
			.content-table
				margin-top 30px
				table
					margin-bottom 0 
					thead
						font-weight bold
						background-color #f3f3f3
						tr
							th
								width 25%
								padding 10px
								line-height 1.7
								vertical-align middle
								text-align center
								@media screen and (max-width: 967px)
									min-width 140px
									white-space normal
					tbody
						text-align center
						tr
							td
								width 25%
								padding 10px
								line-height 1.7
								vertical-align middle
								@media screen and (max-width: 967px)
									min-width 140px
									white-space normal
								a
									text-decoration none
									color color-333333